{
  "name": "mysite",
  "version": "2.0.0",
  "description": "Prayatna's personal site",
  "scripts": {
    "clean": "rimraf public",
    "dev:tailwind": "npx tailwindcss -i ./src/assets/css/input.css -o public/assets/css/style.css --watch",
    "dev:eleventy": "eleventy --serve",
    "dev": "npm-run-all clean --parallel dev:*",
    "build:tailwind": "npx tailwindcss -i ./src/assets/css/input.css -o public/assets/css/style.css --minify",
    "build:eleventy": "ELEVENTY_PRODUCTION=true npx @11ty/eleventy",
    "build": "NODE_ENV=production npm-run-all clean build:*"
  },
  "author": "Prayatna Bhattarai",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  }
}
